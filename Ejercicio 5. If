#include <stdio.h>

int main() 
{
    float montoCompra, montoFinal;
    
    // Solicitar el monto de la compra
    printf("Ingrese el monto de la compra: ");
    scanf("%f", &montoCompra);
    
    // Aplicar el descuento si corresponde
    if (montoCompra > 2500) {
        montoFinal = montoCompra * 0.92; // Aplicando 8% de descuento
    } else {
        montoFinal = montoCompra;
    }
    
    // Mostrar el monto final a pagar
    printf("El monto final a pagar es: %.2f\n", montoFinal);
    
    return 0;
}
