#include <stdio.h>

int main() 
{
    int n, i, sum = 0;
   
    printf("Ingrese el n√∫mero de elementos en el arreglo: ");
    scanf("%d", &n);
    
    int arr[n];
    
    printf("Ingrese los elementos del arreglo:\n");
    for(i = 0; i < n; i++) 
    {
        scanf("%d", &arr[i]);
    }
    
    for(i = 0; i < n; i++) 
    {
        sum += arr[i];
    }
    
    printf("La suma de los elementos del arreglo es: %d\n", sum);
    
    return 0;
}
