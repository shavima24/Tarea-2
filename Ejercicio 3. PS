//Ejercicio 3 

#include <stdio.h>

int main() 
{
    float dolares, pesos;
    const float tasa_cambio = 11.96;

    // Solicitar al usuario la cantidad en dólares
    printf("Ingrese la cantidad en dolares: ");
    scanf("%f", &dolares);

    // Calcular la conversión
    pesos = dolares * tasa_cambio;

    // Mostrar el resultado
    printf("%.2f dolares equivalen a %.2f pesos\n", dolares, pesos);

    return 0;
}
