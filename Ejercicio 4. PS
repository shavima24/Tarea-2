#include <stdio.h>

int main() 
{
    float capital, tasa_interes, monto_final;

    printf("Ingrese la cantidad de dinero invertida: ");
    scanf("%f", &capital);
    printf("Ingrese la tasa de interés mensual (en porcentaje): ");
    scanf("%f", &tasa_interes);

    monto_final = capital + (capital * tasa_interes / 100);

    printf("El monto total al final del mes será: %.2f\n", monto_final);

    return 0;
}
