
#include <stdio.h>

int main() 
{
    int numero, positivos = 0, negativos = 0, nulos = 0;
    
    printf("Ingrese 100 números:\n");
    for (int i = 0; i < 100; i++) {
        printf("Número %d: ", i + 1);
        scanf("%d", &numero);

        if (numero > 0) 
        {
            positivos++;
        } 
        else if (numero < 0) 
        {
            negativos++;
        } 
        else 
        {
            nulos++;
        }
    }

    printf("\nResultados:\n");
    printf("Positivos: %d\n", positivos);
    printf("Negativos: %d\n", negativos);
    printf("Nulos: %d\n", nulos);

    return 0;
}
