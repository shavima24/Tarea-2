#include <stdio.h>

int main() 
{
    float sueldo, aumento;

    // Solicitar el sueldo del trabajador
    printf("Ingrese el sueldo del trabajador: ");
    scanf("%f", &sueldo);

    // Calcular el aumento seg√∫n el sueldo
    if (sueldo < 1000) {
        aumento = sueldo * 0.15;
    } else {
        aumento = sueldo * 0.12;
    }

    // Imprimir el sueldo con el aumento incorporado
    sueldo += aumento;
    printf("El sueldo con el aumento incorporado es: %.2f\n", sueldo);

    return 0;
}
