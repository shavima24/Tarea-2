#include <stdio.h>

int main() 
{
    float sueldo, aumento;

    printf("Ingrese el sueldo del trabajador: ");
    scanf("%f", &sueldo);

    if (sueldo < 1000) {
        aumento = sueldo * 0.15;
    } else {
        aumento = sueldo * 0.12;
    }

    sueldo += aumento;
    printf("El sueldo con el aumento incorporado es: %.2f\n", sueldo);

    return 0;
}
